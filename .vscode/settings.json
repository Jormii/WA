{
    "editor.formatOnSave": true,
    "C_Cpp.clang_format_style": "{IndentWidth: 4, InsertNewlineAtEOF: True, AlwaysBreakTemplateDeclarations: Yes}",
    "[python]": {
        "editor.formatOnType": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "isort.args": [
        "--profile",
        "black"
    ],
    "files.associations": {
        "*.embeddedhtml": "html",
        "stdint.h": "c"
    }
}